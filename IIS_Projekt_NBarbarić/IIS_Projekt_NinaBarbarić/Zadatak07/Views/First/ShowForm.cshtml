@model Repository.Models.Game

@using (Html.BeginForm("Create", "First"))
{
    <div class="form-group row mt-4">
        @Html.TextBoxFor(model => model.IDGame, new { @class = "form-control", @placeholder = "Enter game id..." })
        @Html.ValidationMessageFor(model => model.IDGame)
    </div>
    <div class="form-group row mt-4">
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @placeholder = "Enter game title..." })
        @Html.ValidationMessageFor(model => model.Title)
    </div>
    <div class="form-group row mt-4">
        @Html.TextBoxFor(model => model.Thumbnail, new { @class = "form-control", @placeholder = "Enter game thumbnail..." })
        @Html.ValidationMessageFor(model => model.Thumbnail)
    </div>
    <div class="form-group row mt-4">
        @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @placeholder = "Enter game description..." })
        @Html.ValidationMessageFor(model => model.Description)
    </div>
    <div class="form-group row mt-4">
        @Html.TextBoxFor(model => model.GameUrl, new { @class = "form-control", @placeholder = "Enter game url..." })
        @Html.ValidationMessageFor(model => model.GameUrl)
    </div>
    <div class="form-group row mt-4">
        @Html.TextBoxFor(model => model.Genre, new { @class = "form-control", @placeholder = "Enter game genre..." })
        @Html.ValidationMessageFor(model => model.Genre)
    </div>
    <div class="form-group row mt-4">
        @Html.TextBoxFor(model => model.Platform, new { @class = "form-control", @placeholder = "Enter game platform..." })
        @Html.ValidationMessageFor(model => model.Platform)
    </div>
    <div class="form-group row mt-4">
        @Html.TextBoxFor(model => model.Publisher, new { @class = "form-control", @placeholder = "Enter game publisher..." })
        @Html.ValidationMessageFor(model => model.Publisher)
    </div>
    <div class="form-group row mt-4">
        @Html.TextBoxFor(model => model.Developer, new { @class = "form-control", @placeholder = "Enter game developer..." })
        @Html.ValidationMessageFor(model => model.Developer)
    </div>
    <div class="form-group row mt-4">
        @Html.TextBoxFor(model => model.ReleaseDate, new { @class = "form-control", @placeholder = "Enter game release date..." })
        @Html.ValidationMessageFor(model => model.ReleaseDate)
    </div>
    <div class="form-group row mt-4">
        @Html.TextBoxFor(model => model.FreeToGameProfileUrl, new { @class = "form-control", @placeholder = "Enter game info url..." })
        @Html.ValidationMessageFor(model => model.FreeToGameProfileUrl)
    </div>

    <button class="form-group row mt-4 btn btn-lg btn-block" style="background-color: #FBEEDF" type="submit">Submit</button>
}